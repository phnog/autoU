{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/classificar", "methods": ["POST"], "dest": "app.py" },

    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
